<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    {%- if title == site.title -%}
      {{ title }}
    {%- else -%}
      {{ title }} | {{ site.title }}
    {%- endif -%}
  </title>
  <link rel="stylesheet" href="{{ '/style.css' | url }}">
</head>
<body>
  <header>
    <div class="wrapper">
      <a href="{{ '/' | url }}">Cloud Equivalent</a>
    </div>
  </header>
  <main>
    <div class="wrapper">
      <h1>{{ title }}</h1>
      {{ content | safe }}
    </div>
  </main>
  <footer>
    <div class="wrapper">
      Contribute or raise an issue on <a href="https://github.com/cloudequivalent/cloudequivalent">cloudequivalent/cloudequivalent</a>
    </div>
  </footer>
</body>
</html>
